@model Hero

<div class="container">
    <h1>Delete Hero</h1>
    <form method="post">
        <div class="mb-3">
            <label asp-for="ImageUrl" class="form-label">ImageUrl</label>
            <input asp-for="ImageUrl" class="form-control" placeholder="ImageUrl">
            <span asp-validation-for="ImageUrl" style="color:red"></span>
        </div>
        <div class="mb-3">
            <label asp-for="TitleUp" class="form-label">TitleUp</label>
            <input asp-for="TitleUp" class="form-control" placeholder="TitleUp">
            <span asp-validation-for="TitleUp" style="color:red"></span>

        </div>
        <div class="mb-3">
            <label asp-for="TitleDown" class="form-label">TitleDown</label>
            <input asp-for="TitleDown" class="form-control" placeholder="TitleDown">
            <span asp-validation-for="TitleDown" style="color:red"></span>

        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <input asp-for="Description" class="form-control" placeholder="Description">
            <span asp-validation-for="Description" style="color:red"></span>

        </div>
        <div class="mb-3">
            <label asp-for="Price" class="form-label">Price</label>
            <input asp-for="Price" class="form-control" placeholder="Price">
            <span asp-validation-for="Price" style="color:red"></span>

        </div>
        <h2>Silmek istediyinizden eminsiniz?</h2>
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
</div>